@page
@model AutomatedDispatcher.Pages.Task.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}



<h4> Actualizeaza informatiile task-ului</h4>
<hr />
<div class="container">
    <form method="post">
        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2 -->
            <div class="col-md-6 justify-content-center">
                <img src="~/images/todo_icon.png" alt="" width="140" height="140" align="middle" style="display:block; margin:auto">
            </div>
        </div>

        <!-- RAND 2-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Task.Id" />
                <div class="form-group">
                    <label asp-for="Task.EmployeeId" class="control-label">Programator asignat</label>
                    <!-- here -->
                    <select asp-for="Task.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                        <option disabled selected>--- Alegeti un angajat ---</option>
                    </select>
                    <span asp-validation-for="Task.EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Name" class="control-label">Nume task</label>
                    <input asp-for="Task.Name" class="form-control" />
                    <span asp-validation-for="Task.Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Priority" class="control-label">Prioritatea (min 10 - 1 max)</label>
                    <input asp-for="Task.Priority" class="form-control" />
                    <span asp-validation-for="Task.Priority" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.ExpectedTime" class="control-label">Timp estimat (ore)</label>
                    <input asp-for="Task.ExpectedTime" class="form-control" />
                    <span asp-validation-for="Task.ExpectedTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 4-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2  -->
            <div class="col-md-6 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Description" class="control-label">Descriere</label>
                    <textarea asp-for="Task.Description" class="form-control"></textarea>
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div>
                    <a asp-page="../Manager/menuManager">Inapoi la meniu</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
