@page
@model AutomatedDispatcher.Pages.Programmer.menuProgrammerModel
@{
    ViewData["Title"] = "menuProgrammer";
}

<h1>Meniu programator</h1>
<h3>TODO Implement table here:</h3>


<p>Adauga tabelul cu taskurile assignate programatorului respectiv</p>

<table id="tableTaskProgrammer" class="table table-striped table-bordered table-sm " cellspacing="0"
       width="100%">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Priority</th>
            <th scope="col">Expected Time</th>
            <th scope="col">Start Date</th>
            <th scope="col">End Date</th>
            <th class="no-sort" scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TaskList)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Status</td>
                <td>@task.Priority</td>
                <td>@task.ExpectedTime</td>
                <td>@task.StartDate</td>
                <td>@task.EndDate</td>
                <td>
                    <a asp-page="./taskDetailsProgrammer" asp-route-id="@task.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>