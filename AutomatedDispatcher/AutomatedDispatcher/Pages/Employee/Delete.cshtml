@page
@model AutomatedDispatcher.Pages.Employee.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}


    <div class="container">

        <h3>Esti sigur ca vrei sa stergi urmatorul angajat?</h3>

        <hr />
        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <img src="~/images/profile.png" alt="" width="100" height="100" align="middle">
            </div>
            <!-- COLOANA 2-->
            <div class="col-md-3">
                <h4>Detaliile angajatului:</h4>
            </div>

        </div>

        <!-- RAND 2-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <label asp-for="Employee.FirstName" class="control-label">Prenume</label>
                    <input asp-for="Employee.FirstName" class="form-control" readonly />
                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.LastName" class="control-label">Nume de familie</label>
                    <input asp-for="Employee.LastName" class="form-control" readonly />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Rand 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.WorkingHours" class="control-label">Norma de lucru (ore/zi)</label>
                    <input asp-for="Employee.WorkingHours" class="form-control" readonly />
                    <span asp-validation-for="Employee.WorkingHours" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <label asp-for="Employee.CurrentWorkload" class="control-label">Workload</label>
                <input asp-for="Employee.CurrentWorkload" class="form-control" readonly />
                <span asp-validation-for="Employee.CurrentWorkload" class="text-danger"></span>
            </div>
        </div>


        <!-- Rand 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 2-->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Employee.Username" class="control-label">Username</label>
                    <input asp-for="Employee.Username" class="form-control" readonly />
                    <span asp-validation-for="Employee.Username" class="text-danger"></span>
                </div>
            </div>
        </div>


        <!-- Rand 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <form method="post">
                    <input type="hidden" asp-for="Employee.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>

            <div class="col-md-3">
                    <a asp-page="../Manager/menuManager">Inapoi la meniu</a>
            </div>


        </div>

    </div>