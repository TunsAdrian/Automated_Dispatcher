@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}

<div class="text-center">
    <form class="form-signin bg-white rounded " method="post">
        <img class="mb-4" src="~/images/user.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <!--<label for="inputEmail" class="sr-only">Email address</label>-->
        <input type="email" asp-for="Username" class="form-control" placeholder="Email address" required autofocus>
        <!--<label for="inputPassword" class="sr-only">Password</label>-->
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>
        <div class="checkbox mb-3 ">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>

