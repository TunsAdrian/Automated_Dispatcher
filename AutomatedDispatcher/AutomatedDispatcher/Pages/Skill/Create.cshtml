@page
@model AutomatedDispatcher.Pages.Skill.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}

    <head>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
    </head>

<hr />
<div class="container">
    <h2 style="text-align:center">Lista Skills</h2>
    <table id="tableSkills" class="table table-striped table-bordered table-sm " cellspacing="0"
           width="100%">
        <thead>
            <tr>

                <th scope="col">Nume Skill</th>
                <th class="no-sort" scope="col">Optiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model.SkillList)
            {
                <tr>
                    <td>@skill.SkillName</td>
                    <td>
                        <a asp-page="../Skill/Edit" asp-route-id="@skill.Id">Editeaza</a> |
                        <a asp-page="../Skill/Details" asp-route-id="@skill.Id">Detalii</a> |
                        <a asp-page="../Skill/Delete" asp-route-id="@skill.Id">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Skill.SkillName" class="control-label"></label>
                    <input asp-for="Skill.SkillName" class="form-control" />
                    <span asp-validation-for="Skill.SkillName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="../Manager/menuManager">Back to List</a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
