@page
@model AutomatedDispatcher.Pages.Programmer.taskDetailsProgrammerModel

@{
    ViewData["Title"] = "taskDetailsProgrammer";
    Layout = "~/Pages/Shared/_LayoutProgrammer.cshtml";
}

    <div class="container">
        <hr />
        <!-- RAND 1-->
        <div class="row justify-content-center">

            <!-- COLOANA 1-2 -->
            <div class="col-md-3 justify-content-center">
                <img src="~/images/todo_icon.png" alt="" width="140" height="140" align="middle" style="display:block; margin:auto">
            </div>

            <div class="col-md-3 justify-content-center text-center">
                <h3>Detaliile taskului:</h3>
            </div>

        </div>

        <!-- RAND 2-->
        <div class="row justify-content-center">

            <!-- COLOANA 1-2 -->
            <div class="col-md-6 justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Task.Name" class="control-label">Nume task</label>
                    <input asp-for="Task.Name" class="form-control" readonly />
                    <span asp-validation-for="Task.Name" class="text-danger"></span>
                </div>
            </div>

        </div>


        <!-- RAND 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.ExpectedTime" class="control-label">Timp estimat (ore)</label>
                    <input asp-for="Task.ExpectedTime" class="form-control" readonly />
                    <span asp-validation-for="Task.ExpectedTime" class="text-danger"></span>
                </div>
            </div>
            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Task.Priority" class="control-label">Prioritatea (min 10 - 1 max)</label>
                    <input asp-for="Task.Priority" class="form-control" readonly />
                    <span asp-validation-for="Task.Priority" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 4-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2 deorece descrierea este mai lunga-->
            <div class="col-md-6 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Description" class="control-label">Descriere</label>
                    <textarea rows="3" asp-for="Task.Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2 d-->
            <div class="col-md-2 justify-content-center">
                <div class="form-group">
                    <a class="btn btn-success text-white" asp-page="../Programmer/taskCompleted" asp-route-id="@Model.Task.Id">   Solved   </a>
                </div>
            </div>
            <!-- COLOANA 2-->
            <div class="col-md-2 justify-content-center">
                <div>
                    <a class="btn btn-danger text-white" asp-page="../Programmer/taskRefused" asp-route-id="@Model.Task.Id">Respinge Task</a>
                </div>
            </div>

            <div class="col-md-2 justify-content-center">
                <div>
                    <a class="btn btn-primary text-white" asp-page="../Programmer/menuProgrammer">Inapoi la meniu</a>
                </div>
            </div>
        </div>
    </div>
  


