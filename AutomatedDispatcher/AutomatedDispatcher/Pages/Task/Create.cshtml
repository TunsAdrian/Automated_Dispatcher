@page
@model AutomatedDispatcher.Pages.Task.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}

<h4>Adauga detaliile taskului:</h4>
<hr />
<div class="container">
    <form method="post">

        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Task.Name" class="control-label"></label>
                    <input asp-for="Task.Name" class="form-control" />
                    <span asp-validation-for="Task.Name" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Task.StatusId" class="control-label"></label>
                    <select asp-for="Task.StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                </div>
            </div>
        </div>


        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Description" class="control-label"></label>
                    <input asp-for="Task.Description" class="form-control" />
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>

            </div>
            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Task.Priority" class="control-label"></label>
                    <input asp-for="Task.Priority" class="form-control" />
                    <span asp-validation-for="Task.Priority" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.ExpectedTime" class="control-label"></label>
                    <input asp-for="Task.ExpectedTime" class="form-control" />
                    <span asp-validation-for="Task.ExpectedTime" class="text-danger"></span>
                </div>
            </div>
            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>


<div>
    <a asp-page="../Manager/menuManager">Inapoi la meniu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
