@page
@model AutomatedDispatcher.Pages.Employee.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}

<hr />

<div class="container">
    <form method="post">

        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3 justify-content-center">
                <img src="~/images/profile.png" alt="" width="100" height="100" align="middle">
            </div>
            <!-- COLOANA 2-->
            <div class="col-md-3">
                <h4>Editeaza datele angajatului:</h4>
            </div>

        </div>

        <!-- RAND 2-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <label asp-for="Employee.FirstName" class="control-label">Prenume</label>
                    <input asp-for="Employee.FirstName" class="form-control" />
                    <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.LastName" class="control-label">Nume de familie</label>
                    <input asp-for="Employee.LastName" class="form-control" />
                    <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Rand 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.Role" class="control-label">Rol (0-manager 1-programator)</label>
                    <input asp-for="Employee.Role" class="form-control" />
                    <span asp-validation-for="Employee.Role" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.Username" class="control-label">Username</label>
                    <input asp-for="Employee.Username" class="form-control" />
                    <span asp-validation-for="Employee.Username" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Rand 4-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.Password" class="control-label">Parola</label>
                    <input asp-for="Employee.Password" class="form-control" />
                    <span asp-validation-for="Employee.Password" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Employee.WorkingHours" class="control-label">Norma de lucru (ore/zi)</label>
                    <input asp-for="Employee.WorkingHours" class="form-control" />
                    <span asp-validation-for="Employee.WorkingHours" class="text-danger"></span>
                </div>
            </div>
        </div>


        <!-- Rand 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-->
            <div class="col-md-3">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>

            <!-- COLOANA 2-->
            <div class="col-md-3">
                <div>
                    <a asp-page="../Manager/menuManager">Inapoi la meniu</a>
                </div>
            </div>
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
