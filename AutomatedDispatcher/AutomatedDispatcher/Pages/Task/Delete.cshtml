@page
@model AutomatedDispatcher.Pages.Task.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_LayoutManager.cshtml";
}

<div class="container">
    <form method="post">
        <!-- RAND 1-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2 -->
            <div class="col-md-3 justify-content-center">
                <img src="~/images/todo_icon.png" alt="" width="140" height="140" align="middle" style="display:block; margin:auto">
            </div>

            <div class="col-md-3 justify-content-center">
                <h5>Esti sigur ca vrei sa stergi urmatorul task?</h5>
            </div>
        </div>

        <!-- RAND 2-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Task.Id" />
                <div class="form-group">
                    <label asp-for="@Model.employeeFullName" class="control-label">Programator asignat</label>
                    <input asp-for="@Model.employeeFullName" class="form-control" readonly />
                    <span asp-validation-for="@Model.employeeFullName" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Name" class="control-label">Nume task</label>
                    <input asp-for="Task.Name" class="form-control" readonly/>
                    <span asp-validation-for="Task.Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 3-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Priority" class="control-label">Prioritatea (min 10 - 1 max)</label>
                    <input asp-for="Task.Priority" class="form-control" readonly/>
                    <span asp-validation-for="Task.Priority" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.ExpectedTime" class="control-label">Timp estimat (ore)</label>
                    <input asp-for="Task.ExpectedTime" class="form-control" readonly/>
                    <span asp-validation-for="Task.ExpectedTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 4-->
        <div class="row justify-content-center">
            <!-- COLOANA 1-2  -->
            <div class="col-md-6 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.Description" class="control-label">Descriere</label>
                    <textarea asp-for="Task.Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Task.Description" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.StartDate" class="control-label">Data inceput</label>
                    <input asp-for="Task.StartDate" class="form-control" readonly/>
                    <span asp-validation-for="Task.StartDate" class="text-danger"></span>
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <label asp-for="Task.EndDate" class="control-label">Data final</label>
                    <input asp-for="Task.EndDate" class="form-control" readonly/>
                    <span asp-validation-for="Task.EndDate" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- RAND 5-->
        <div class="row justify-content-center">
            <!-- COLOANA 1 -->
            <div class="col-md-3 justify-content-center">
                <div class="form-group">
                    <input type="hidden" asp-for="Task.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

            <!-- COLOANA 2 -->
            <div class="col-md-3 justify-content-center">
                <div>
                    <a asp-page="../Manager/menuManager">Inapoi la meniu</a>
                </div>
            </div>
        </div>
    </form>
</div>

   

