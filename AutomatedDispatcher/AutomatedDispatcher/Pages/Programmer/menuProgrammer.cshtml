@page
@model AutomatedDispatcher.Pages.Programmer.menuProgrammerModel
@{
    ViewData["Title"] = "menuProgrammer";
    Layout = "~/Pages/Shared/_LayoutProgrammer.cshtml";
}
    <head>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
    </head>

<h1 style="text-align:center">Meniu programator</h1>
<p>&nbsp</p>

<div class="container">
    <h2 style="text-align:center">Lista Taskuri</h2>
    <table id="tableTaskProgrammer" class="table table-striped table-bordered table-sm " cellspacing="0"
           width="100%">
        <thead>
            <tr>

                <th scope="col">Nume</th>
                <th scope="col">Status</th>
                <th scope="col">Prioritate</th>
                <th scope="col">Timp Estimat</th>
                <th scope="col">Data inceput</th>
                <th scope="col">Data final</th>
                <th class="no-sort" scope="col">Optiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.TaskList)
            {
            <tr>
                <td>@task.Name</td>
                @if (task.StatusId == 1)
                {
                    <td>Completed</td>
                }
                else if (task.StatusId == 2)
                {
                    <td>Unassigned</td>
                }
                else if (task.StatusId == 3)
                {
                    <td>In progress</td>
                }
                <td>@task.Priority</td>
                <td>@task.ExpectedTime</td>
                <td>@task.StartDate</td>
                <td>@task.EndDate</td>
                <td>
                    <a asp-page="./taskDetailsProgrammer" asp-route-id="@task.Id">Detalii</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>